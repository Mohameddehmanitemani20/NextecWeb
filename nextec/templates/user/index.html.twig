{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse</th>
                <th>DateNaissance</th>
                <th>Email</th>
                <th>Nom</th>
                <th>NumTel</th>
                <th>Password</th>
                <th>Prenom</th>
                <th>Role</th>
                <th>Username</th>
                <th>Genre</th>
                <th>IdEq</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.adresse }}</td>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.numTel }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.genre }}</td>
                <td>{{ user.idEq }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
