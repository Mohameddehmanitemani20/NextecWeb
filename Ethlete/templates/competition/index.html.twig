{% extends 'back.html.twig' %}

{% block title %}Competition index{% endblock %}

{% block body %}
    <h1>Competition index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>nbEquipe</th>
            <th>date</th>
            <th>adresse</th>
            <th>nom</th>
            <th>Action</th>


        </tr>
        </thead>
        <tbody>
        {% for competition in competitions %}

            <tr>
                <td>{{ competition.nbEquipe }}</td>
                <td>{{ competition.date  }}</td>
                <td>{{ competition.adresse }}</td>
                <td>{{ competition.nom }}</td>
                <td>
                    <a href="{{ path('app_competition_show', {'idCompetition': competition.idCompetition}) }}">show</a>
                    <a href="{{ path('app_competition_edit', {'idCompetition': competition.idCompetition}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_competition_new') }}">Create new</a>
{% endblock %}
