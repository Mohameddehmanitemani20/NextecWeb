{% extends 'back.html.twig' %}

{% block title %}Liste des Evénements{% endblock %}

{% block body %}
    <h1>Liste des Evénements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdEvent</th>
                <th>Nom Event</th>
                <th>Date de Debut</th>
                <th>Date de Fin</th>
                <th>Type de l'Event</th>
                <th>Lieu</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.idEvent }}</td>
                <td>{{ evenement.nomEvent }}</td>
                <td>{{ evenement.dateDebut ? evenement.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.dateFin ? evenement.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ evenement.typee }}</td>
                <td>{{ evenement.lieu }}</td>
                <td>{{ evenement.prixu }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'idEvent': evenement.idEvent}) }}">show</a>
                    <a href="{{ path('app_evenement_edit', {'idEvent': evenement.idEvent}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_evenement_new') }}">Create new</a>
{% endblock %}
