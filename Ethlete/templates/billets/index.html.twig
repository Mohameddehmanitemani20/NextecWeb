{% extends 'back.html.twig' %}

{% block title %}Billets index{% endblock %}

{% block body %}
    <h1>Billets index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdBillet</th>
                <th>NbrBillet</th>
                <th>Prix</th>
                <th>DateAchat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for billet in billets %}
            <tr>
                <td>{{ billet.idBillet }}</td>
                <td>{{ billet.nbrBillet }}</td>
                <td>{{ billet.prix }}</td>
                <td>{{ billet.dateAchat ? billet.dateAchat|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_billets_show', {'idBillet': billet.idBillet}) }}">show</a>
                    <a href="{{ path('app_billets_edit', {'idBillet': billet.idBillet}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_billets_new') }}">Create new</a>
{% endblock %}
